        <tr>
            {% for wound in wounds %}
            <td colspan="4" id="wound_{{ wound['stun_save_mod'] }}" class="wound_type">{{ wound['abr'] }} {{ wound['stun_save_mod'] }}</td>
            {% endfor %}
