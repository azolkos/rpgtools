            <td colspan="8" style="text-align: center; background-color: black; color: white">Name:</td>
            <td colspan="12"><input type="text" style='width: 100%'></td>
            <td colspan="8" style="text-align: center; background-color: black; color: white">Role:</td>
            <td colspan="12"><input type="text" style='width: 100%'></td>
            {# <table>
                <tr>
                    <td colspan="2" class="w3-black w3-center">Handle</td>
                    <td><input type="text"></input></td>
                </tr>
                <tr>
                    <td colspan="2" class="w3-black w3-center">STATS</td>
                    <td></td>
                </tr>
                {% for stat in stats %}
                <tr>
                    <td>{{ stat['stat'] }}</td>
                    <td id="{{ stat['stat'] }}_value">[    ]</td>
                    <td></td>
                </tr>
